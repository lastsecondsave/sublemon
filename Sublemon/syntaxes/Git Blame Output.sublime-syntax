%YAML 1.2
---
name: Git Blame Output
scope: text.output.git.blame
hidden: true

contexts:
  main:
    - match: ^(\d{4}-\d{2}-\d{2})\s+(.*?)\s+([0-9a-f]+)\s+(\d+)
      captures:
        1: style.italic constant.date.git
        2: markup.heading entity.name.author.git
        3: constant.numeric.hash.git
        4: constant.numeric.line-number.git

    - match: ^\s+(\d+)
      captures:
        1: constant.numeric.line-number.git
