%YAML 1.2
---
name: Git Blame Output
scope: text.git.blame
hidden: true

contexts:
  main:
  - match: ^([0-9a-f]+) (.*?)\s+(\d{4}-\d{2}-\d{2})\s*(\d+)
    captures:
      1: constant.numeric.hash.git
      2: entity.name.author.git
      3: constant.date.git
      4: constant.numeric.line-number.git

  - match: ^\s+(\d+)
    captures:
      1: constant.numeric.line-number.git
