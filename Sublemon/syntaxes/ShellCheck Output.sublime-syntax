%YAML 1.2
---
name: ShellCheck Output
scope: text.output.shellcheck
hidden: true

contexts:
  main:
    - match: '^In (.+?) line (\d+):$'
      captures:
        1: entity.name.filename
        2: constant.numeric.line

    - match: '^\s*(\^-*\^?) (\w+): (.*)'
      captures:
        1: punctuation.definition.variable
        2: storage.category
        3: string.description

