%YAML 1.2
---
name: Git Merge Conflict
scope: text.git.merge-conflict

contexts:
  main:
  - match: '<<<<<<< (.*)\n'
    scope: meta.upsteam
    captures:
      1: variable.other.branch.git.merge-conflict
  - match: =======\n
    scope: meta.separator
  - match: '>>>>>>> (.*)\n'
    scope: meta.changes
    captures:
      1: variable.other.branch.git.merge-conflict
